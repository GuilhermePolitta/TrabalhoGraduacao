CREATE TABLE orders (
    customer_id INT,
    amount DOUBLE
);

CREATE TABLE things (
    order_id INT,
    amount DOUBLE,
    FOREIGN KEY (order_id) REFERENCES orders(customer_id)
);

CREATE TABLE customers (
    customer_id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(255),
    cel_number INT,
	order_id INT,
	amount DOUBLE,
    teste TINYINT(1),
    t1 TINYINT(1),
	t2 LONGBLOB2,
	t3 DATE,
	t4 DATETIME,
	t5 DECIMAL,
	t6 FLOAT,
	t7 TINYTEXT,
	t8 TIME,
    FOREIGN KEY (order_id) REFERENCES orders(customer_id)
);
